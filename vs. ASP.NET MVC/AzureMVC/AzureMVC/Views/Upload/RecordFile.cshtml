
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <title>麥克風轉錄</title>
    <style>
        body {
            background-color: #E2DED0;
        }

        #title h1 {
            margin-top: 100px;
            margin-left: 40px;
            font-weight: 800;
            line-height: 1.3;
            font-size: 2.5rem;
        }

        #title span {
            margin-top: 100px;
            margin-left: 40px;
            line-height: 1.6;
        }

        .nav-link {
            color: white;
            background-color: initial;
            text-decoration: none;
            transition: color 0.3s, background-color 0.3s;
            margin-right: 30px;
        }

        .nav-link:hover {
            color: black;
            background-color: white;
        }

        .navbar-nav .nav-item .active {
            color: black;
            background-color: white;
        }

        .navbar-nav {
            margin: 0;
            padding: 0;
            list-style: none; /* 去除列表的默认样式 */
        }

        .nav-item {
            margin: 0;
            padding: 0;
        }
        #choose {
            display: flex;
            justify-content: center;
/*            align-items: center;
*/        }
        #choose button {
            width: 450px;
            height: 50px;
            margin-top: 50px;
            margin-right:40px;
        }
        #resultArea{
            margin-left:200px;
            margin-top:30px
        }

    </style>

</head>
<body>
    <div>
        <nav class="navbar navbar-expand-lg  navbar-dark  fixed-top" style="background-color: #647C90 ">
            <img src="~/img/logo.png" width="200" height="45" />
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarScroll" aria-controls="navbarScroll" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarScroll">
                <ul class="navbar-nav me-auto my-2 my-lg-0" style="--bs-scroll-height: 100px;">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="UploadFile">語音檔辨識</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active fw-bold fs-5 " aria-current="page" href="RecordFile">麥克風轉錄</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="SpeakerTranscribe">多人會議轉譯</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="UploadPersonal_AudioFile">個人音檔</a>
                    </li>
                </ul>
                <form class="d-flex" role="search">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                </form>
            </div>
        </nav>
    </div>
    <div style="margin-top:80px">
        <div id="choose">
            <button type="submit" class="btn btn-secondary" id="rec1">開始錄音</button>
            <button type="submit" class="btn btn-secondary" id="rec2" disabled="disabled">停止錄音</button>
        </div>
        <div id="resultArea"></div>
        @*<p>
            @ViewBag.text
        </p>*@
    </div>
    <script>
        $(document).ready(function () {
            $('#rec1').click(function () {
                document.getElementById('rec2').disabled = false;
                $.ajax({
                    url: '/Upload/StartRecording',
                    //url: '/Upload/SpeakerStartRecord',
                    type: "POST",
                    contentType: "application/json",
                    dataType: "json",
                    success: function (result) {
                        $('#resultArea').html(result.message);
                        console.log("success");
                    },
                    error: function (result) {
                        console.log(result);
                        console.log("error");
                    }
                })
            })

            $('#rec2').click(function () {
                document.getElementById('rec2').disabled = true;
                $.ajax({
                    //url: '/Upload/SpeakerStopRecord',
                    url: '/Upload/StopRecording',
                    type: "POST",
                    contentType: "application/json",
                    dataType: "text",
                    success: function (result) {
                        $('#resultArea').html("語音轉文字:<br/>" + result);
                        console.log("success");
                    },
                    error: function (result) {
                        console.log(result);
                        console.log("error");
                    }
                })
            })
        });
    </script>
</body>
</html>
